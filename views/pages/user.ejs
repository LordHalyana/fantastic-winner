<!DOCTYPE html>
<html>
<head>
    <title>User Profile</title>
    <%- include('partials/css.ejs') %>
</head>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container mt-5">
        <h1>User Profile</h1>
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title"><%= user.firstName %> <%= user.lastName %></h5>
                        <p class="card-text">
                            <strong>ID:</strong> <%= user.id %><br>
                            <strong>Email:</strong> <%= user.email %><br>
                            <strong>Age:</strong> <%= user.age %><br>
                            <strong>Hobbies:</strong> <%= user.hobbies.join(', ') %><br>
                            <strong>Address:</strong> <%= user.address.street %>, <%= user.address.city %>, <%= user.address.state %> <%= user.address.zip %>
                        </p>
                    </div>
                    <div class="mr-5">
                        <% if(user.avatar) { %>
                            <img src="<%= user.avatar %>" alt="User Avatar" class="rounded-circle ml-3" style="width: 50px; height: 50px;">
                        <% } else { %>
                            <i class="far fa-user-circle fa-3x ml-3"></i>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/js.ejs') %>
    <%- include('partials/footer.ejs') %>
</body>
</html>